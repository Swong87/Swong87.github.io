{
  "title": "Grayscale",
  "name": "startbootstrap-grayscale",
  "version": "4.0.0-beta",
  "description": "A grayscale one page HTML theme for Bootstrap.",
  "keywords": [
    "css",
    "sass",
    "html",
    "responsive",
    "theme",
    "template"
  ],
  "homepage": "https://startbootstrap.com/template-overviews/grayscale",
  "bugs": {
    "url": "https://github.com/BlackrockDigital/startbootstrap-grayscale/issues",
    "email": "feedback@startbootstrap.com"
  },
  "license": "MIT",
  "author": "Start Bootstrap",
  "contributors": [
    "David Miller (http://davidmiller.io/)"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BlackrockDigital/startbootstrap-grayscale.git"
  },
  "dependencies": {
    "bootstrap": "^4.0.0-beta",
    "font-awesome": "4.7.0",
    "jquery": "^3.2.1",
    "jquery.easing": "^1.4.1",
    "popper.js": "^1.11.1"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass scss/custom.scss css/custom.css",
    "build:css:min": "sass scss/custom.scss css/custom.min.css --style=compressed",
    "build:js": "terser js/grayscale.js -o js/grayscale.min.js",
    "watch": "npm run watch:css",
    "watch:css": "sass --watch scss:css",
    "serve": "browser-sync start --server --files '*.html, css/*.css, js/*.js' --startPath index.html",
    "dev": "concurrently \"npm run watch:css\" \"npm run serve\""
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "concurrently": "^8.2.2",
    "sass": "^1.77.0",
    "terser": "^5.24.0"
  }
}
